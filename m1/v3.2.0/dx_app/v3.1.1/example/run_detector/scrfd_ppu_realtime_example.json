{
    "description":"run yolo face detector",
    "usage":"detection",
    "model":{
        "path":"../assets/models/SCRFD500M_PPU.dxnn",
        "param":{
            "name":"scrfd",
            "input_width" : 640,
            "input_height" : 640,
            "score_threshold":0.25,
            "iou_threshold":0.4,
            "last_activation":"sigmoid",
            "decoding_method":"scrfd",
            "box_format":"corner",
            "kpt_order":"front",
            "kpt_count":5,
            "final_outputs":[
                "FACE"
            ],
            "layer":[
                {
                    "name":"ppu_0",
                    "stride":8
                },
                {
                    "name":"ppu_1",
                    "stride":16
                },
                {
                    "name":"ppu_2",
                    "stride":32
                }
            ]
        }
    },
    "input":{
        "format":"RGB",
        "sources":[
            {
                "type":"video", 
                "path":"assets/videos/dance-group.mov"
            },
            {
                "type":"video", 
                "path":"assets/videos/dance-group2.mov"
            },
            {
                "type":"video", 
                "path":"assets/videos/dance-solo.mov"
            },
            {
                "type":"image", 
                "path":"sample/face_sample.jpg"
            }
        ]
    },
    "output":{
        "description":"output type is used for post processing, that yolo, ssd, etc...",
        "classes":[ 
            "face"
        ],
        "type":"scrfd"
    },
    "application":{
        "description":"result of post-processing after inference, you can use \"save\" or \"realtime\" or \"none\"",
        "type":"realtime",
        "resolution": [
            960, 
            540
        ]
    }
}
